import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import io.github.bonigarcia.wdm.WebDriverManager;

public class Demo {
	public static void main(String[] args) throws Throwable {
		WebDriverManager.chromedriver().setup();
		WebDriver driver= new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(Duration.ofMinutes(5));
		driver.manage().window().maximize();
		
		driver.navigate().to("https://landingpage-stage.ofofo.io/#/sessions/registration");
		driver.findElement(By.id("firstName")).sendKeys("Srisha",Keys.ENTER);
		driver.findElement(By.id("lastName")).sendKeys("Joshi",Keys.ENTER);
		driver.findElement(By.id("email")).sendKeys("srisha@demo.com",Keys.ENTER);
		WebElement list = driver.findElement(By.id("role"));
		System.out.println(new Select(list).getOptions());
		WebElement countries = driver.findElement(By.xpath("//select[@id='role']")); 
		new Select(countries).selectByValue("United States");
		driver.findElement(By.id("phone")).sendKeys("741256325",Keys.ENTER);
		driver.findElement(By.id("websiteUrl")).sendKeys("https://www.google.com",Keys.ENTER);
		driver.findElement(By.xpath("//input[@placeholder='Password']")).sendKeys("Ofofo@1234",Keys.ENTER);
		driver.findElement(By.xpath("//input[@placeholder='Confirm Password']")).sendKeys("Ofofo@1234",Keys.ENTER);
		WebElement registerAs = driver.findElement(By.xpath("//select[@formcontrolname='role']")); 
		new Select(registerAs).selectByVisibleText("Seller"); 
		WebElement list = driver.findElement(By.id("role"));
		System.out.println(new Select(list).getOptions());
		Thread.sleep(5000);
		driver.close();
		
		
	}

}
